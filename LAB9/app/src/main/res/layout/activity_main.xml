<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">


    //Custom Logo design
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Reminder"
            android:textAlignment="center"
            android:textSize="40sp"
            android:fontFamily="@font/times_new_roman"
            android:layout_marginBottom="15sp"/>

    //Custom designed edittext box to make it look more user friendly.
        <EditText
                android:id="@+id/med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/et_style"
                android:fontFamily="@font/times_new_roman"
                android:hint="Medicine Name"
                android:inputType="text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/et_style"
                android:fontFamily="@font/times_new_roman"
                android:hint="Date"
                android:inputType="date"
                android:padding="12dp" />

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/et_style"
                android:fontFamily="@font/times_new_roman"
                android:hint="Time"
                android:inputType="text"
                android:padding="12dp" />

        //Custom Designed Button with icons inside button

            <Button
                android:id="@+id/insert"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginBottom="8sp"
                android:drawableLeft="@drawable/reminder_2"
                android:fontFamily="@font/sans_serif"
                android:text="Set Reminder"
                android:textColor="@color/white"
                app:backgroundTint="#262A53" />


            <Button
                android:id="@+id/showdb"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginBottom="8sp"
                android:drawableLeft="@drawable/file"
                android:fontFamily="@font/sans_serif"
                android:text="show data"
                android:textColor="@color/white"
                app:backgroundTint="#262A53" />

        //TextView to display the data stored in the database
            <TextView
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:textSize="15sp"/>

</LinearLayout>